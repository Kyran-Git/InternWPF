<Window x:Class="InternWPF.View.JournalPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Journal" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter Journal Name:"/>
            <TextBox Text="{Binding NewJournalName}" Width="300" Margin="10"/>
            <Button Content="Create Journal" Command="{Binding CreateJournalCommand}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
