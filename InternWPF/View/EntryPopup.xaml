<Window x:Class="InternWPF.View.EntryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True" 
        Title="New Entry" Height="300" Width="400">
    
    
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Entry Title:"/>
            <TextBox Text="{Binding NewEntryTitle}" Width="300" Margin="10"/>

            <TextBlock Text="Entry Date:"/>
            <DatePicker SelectedDate="{Binding NewEntryDate}" Width="300" Margin="10"/>

            <TextBlock Text="Activities:"/>
            <TextBox Text="{Binding NewEntryActivities}" Width="300" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="10"/>

            <Button Content="Add Entry" Command="{Binding AddEntryCommand}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
