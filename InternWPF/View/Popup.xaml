<UserControl x:Class="InternWPF.View.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InternWPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">

                <TextBlock Text="{Binding PopupMessage}" FontWeight="Bold" 
                       HorizontalAlignment="Center" FontSize="16" Foreground="Red" Margin="10"/>

                <Button Content="OK" Command="{Binding ClosePopupCommand}" Width="100" 
                    HorizontalAlignment="Center" Margin="10" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
