<Window x:Class="InternWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- 0 -->
            <RowDefinition Height="auto"/>
            <!-- 1 -->
            <RowDefinition Height="auto"/>
            <!-- 2 -->
            <RowDefinition Height="auto"/>
            <!-- 3 -->
            <RowDefinition Height="auto"/>
            <!-- 4 -->
            <RowDefinition Height="auto"/>
            <!-- 5 -->
            <RowDefinition Height="*"/>
            <!-- 6 -->
            <RowDefinition Height="20"/>
            <!-- 7 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <!-- 0 -->
            <ColumnDefinition Width="auto" MinWidth="95"/>
            <!-- 1 -->
            <ColumnDefinition Width="auto" MinWidth="160"/>
            <!-- 2 -->
            <ColumnDefinition Width="auto"/>
            <!-- 3 -->
            <ColumnDefinition Width="auto"/>
            <!-- 4 -->
            <ColumnDefinition Width="*"/>
            <!-- 5 -->
            <ColumnDefinition Width="20"/>
            <!-- 6 -->
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Text="Your Journal"
            FontFamily="Roboto Mono"
            FontSize="40"
            FontWeight="Heavy"
            />

        <TextBlock
            Margin="0,10,5,10"
            Grid.Row="2"
            Grid.Column="1"
            Text="Date"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <TextBlock
            Margin="0,10,5,10"
            Grid.Row="3"
            Grid.Column="1"
            Text="Title"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <TextBlock
            Margin="0,10,5,10"
            Grid.Row="4"
            Grid.Column="1"
            Text="Activities"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <DatePicker
            Name="dateTxt"
            Margin="0,10,5,10"
            Grid.Row="2"
            Grid.Column="2"
            FontSize="20"/>

        <TextBlock
            Margin="0,10,5,10"
            Grid.Row="5"
            Grid.Column="1"
            VerticalAlignment="Center"
            FontSize="22"
            Text="Submit?"/>

        <TextBox
            Name="titleTxt"
            Margin="0,10,5,10"
            Grid.Row="3"
            Grid.Column="2"/>

        <TextBox
            Name="actTxt"
            Margin="0,10,5,10"
            Grid.Row="4"
            Grid.Column="2"
            Height="200"/>

        <Button
            Margin="0,10,5,10"
            Grid.Column="2"
            Grid.Row="5"
            Height="35"
            Width="100"
            Content="SUBMIT" 
            Click="sbmt_Click"/>

        <ListView Name="JournalListView" 
                  Grid.Row="1" Grid.RowSpan="6" Grid.Column="4" 
                  Margin="10" Background="White">
            <ListView.View>
                <GridView>
                    <GridViewColumn 
                        Header="Date" 
                        DisplayMemberBinding="{Binding dateTxt}" 
                        Width="100"/>
                    <GridViewColumn 
                        Header="Title" 
                        DisplayMemberBinding="{Binding titleTxt}" 
                        Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Window>
