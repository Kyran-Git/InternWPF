<Window x:Class="InternWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="Roboto Mono"/>
            <Setter Property="Margin" Value="0,10,5,10"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,10,5,10"/>
            <Setter Property="Width" Value="180"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,10,5,10"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>

    <Grid Background="AntiqueWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <!-- 0 -->
            <RowDefinition Height="auto"/>
            <!-- 1 -->
            <RowDefinition Height="auto"/>
            <!-- 2 -->
            <RowDefinition Height="auto"/>
            <!-- 3 -->
            <RowDefinition Height="auto"/>
            <!-- 4 -->
            <RowDefinition Height="auto"/>
            <!-- 5 -->
            <RowDefinition Height="*"/>
            <!-- 6 -->
            <RowDefinition Height="20"/>
            <!-- 7 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <!-- 0 -->
            <ColumnDefinition Width="auto" MinWidth="95"/>
            <!-- 1 -->
            <ColumnDefinition Width="auto" MinWidth="160"/>
            <!-- 2 -->
            <ColumnDefinition Width="auto"/>
            <!-- 3 -->
            <ColumnDefinition Width="auto"/>
            <!-- 4 -->
            <ColumnDefinition Width="*"/>
            <!-- 5 -->
            <ColumnDefinition Width="20"/>
            <!-- 6 -->
        </Grid.ColumnDefinitions>

        <!--MAIN TITLE-->
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Text="Your Journal"
            FontFamily="Roboto Mono"
            FontSize="40"
            FontWeight="Heavy"
            />

        <!--DATE ENTRY-->
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Text="Date"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <!--TITLE ENTRY-->
        <TextBlock
            Grid.Row="3"
            Grid.Column="1"
            Text="Title"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <!--ACTIVITY ENTRY-->
        <TextBlock
            Grid.Row="4"
            Grid.Column="1"
            Text="Activities"
            FontSize="22"
            FontFamily="Roboto Mono"/>

        <!--DATE PICK-->
        <DatePicker
            Width="180"
            Name="dateTxt"
            Margin="0,10,5,10"
            Grid.Row="2"
            Grid.Column="2"
            FontSize="20"/>

        <!--SUBMIT TEXT-->
        <TextBlock
            Margin="0,10,5,10"
            Grid.Row="5"
            Grid.Column="1"
            VerticalAlignment="Center"
            FontSize="22"
            Text="Submit?"/>

        <!--TITLE TEXT-->
        <TextBox
            Name="titleTxt"
            Margin="0,10,5,10"
            Grid.Row="3"
            Grid.Column="2"/>

        <!--ACTIVITY ENTRY-->
        <TextBox
            Name="actTxt"
            Margin="0,10,5,10"
            Grid.Row="4"
            Grid.Column="2"
            Height="200"
            TextWrapping="Wrap"
            AcceptsReturn="True"/>

        <!--SUBMIT BUTTON-->
        <Button
            Margin="0,10,5,10"
            Grid.Column="2"
            Grid.Row="5"
            Content="SUBMIT" 
            Click="sbmt_Click"/>

        <!--SORY BY DATE BUTTON-->
        <Button
            Grid.Row="1"
            Grid.Column="5"
            Content="BY DATE"
            Click="date_Click"/>

        <!--SORT BY TITLE BUTTON-->
        <Button
            Grid.Row="2"
            Grid.Column="5"
            Content="BY TITLE"
            Click="title_Click"/>

        <!--LISTVIEW OF ALL ENTRIES-->
        <ListView Name="JournalListView" 
                  Grid.Row="1" Grid.RowSpan="6" Grid.Column="4" 
                  Margin="10" Background="White"
                  SelectionChanged="JournalListView_SelectionChanged"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn 
                        Header="Date" 
                        DisplayMemberBinding="{Binding dateTxt}" 
                        Width="100"/>
                    <GridViewColumn 
                        Header="Title" 
                        DisplayMemberBinding="{Binding titleTxt}" 
                        Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Window>
