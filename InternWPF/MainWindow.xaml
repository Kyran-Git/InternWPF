<Window x:Class="InternWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>        <!-- 1 -->
            <RowDefinition Height="auto"/>      <!-- 2 -->
            <RowDefinition Height="*"/>         <!-- 3 -->
            <RowDefinition Height="20"/>        <!-- 4 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>      <!-- 1 -->
            <ColumnDefinition Width="auto"/>    <!-- 2 -->
            <ColumnDefinition Width="*"/>       <!-- 3 -->
            <ColumnDefinition Width="20"/>      <!-- 4 -->
        </Grid.ColumnDefinitions>

        <TextBlock
            Text=""/>
    </Grid>
</Window>
